<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/live_top_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_up"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/live_top_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/live_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/simple_player_chevron_left_white_36dp" />

        <TextView
            android:id="@+id/live_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:padding="8dp"
            android:text="直播房间名"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/live_top_danmu"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dp">


        <EditText
            android:id="@+id/et_top_danmu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:hint="输入聊天内容"
            android:lines="1"
            android:imeOptions="flagNoExtractUi"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="#888889"
            android:textColorHint="#c8c8c8"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_top_send"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_right"
            android:text="发送弹幕"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
